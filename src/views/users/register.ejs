<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../static/partials/head.ejs %>
</head>
<body>
  <% include ../static/partials/navbar.ejs %>

  <main class="user-form">
    <% include ../static/partials/messages.ejs %>
    <h1 class="text-center">Registration</h1>
    <hr>
    <form action="/users" method="POST" >
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter your email">
        <small class="text-muted" id="emailHelp">Enter a valid email address</small>
      </div>
      <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" name="username" placeholder="Enter a Username" class="form-control" aria-describedby="usernameHelp">
        <small class="text-muted" id="usernameHelp">Usernames must be at least 6 characters</small>
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" name="password" placeholder="Create Password" class="form-control" aria-describedby="passwordHelp">
        <small class="text-muted" id="passwordHelp">Password must match confirmation below</small>
      </div>
      <div class="form-group">
        <label for="confirmPW">Confirm Password:</label>
        <input type="password" name="confirmPW" placeholder="Confirm Password" class="form-control" aria-describedby="passwordHelp">
      </div>
      <button type="submit" class="btn btn-primary">Register</button>
    </form>
  </main>
  <% include ../static/partials/baseScripts.ejs %>
</body>
</html>